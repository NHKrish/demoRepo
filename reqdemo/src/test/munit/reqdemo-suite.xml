	<munit:config name="reqdemo-suite.xml" />
	<munit:test name="reqdemoFlow-test" doc:id="6acb28f4-61e5-4d13-b74e-2fb56fdfdc56" >
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock Request" doc:id="07f660b7-b4e7-4e49-a655-c9478067e41d" processor="http:request">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="c48befeb-4275-4013-80c1-e89fb356dbf0" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[output application/json  --- readUrl('classpath://reqdemoFlowtest\mock_payload.dwl')]" mediaType="application/json " encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="Flow-ref to reqdemoFlow" doc:id="975e4cfd-ea06-4924-933b-caead2246ab2" name="reqdemoFlow"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert doc:name="Assert payload" doc:id="0d8dc397-b71b-4147-a209-5810a336dda5" message="The payload does not match">
				<munit-tools:that ><![CDATA[#[%dw 2.0
import reqdemoFlowtest::assert_expression_payload
---
assert_expression_payload::main({payload: payload, attributes: attributes, vars: vars})]]]></munit-tools:that>
			</munit-tools:assert>
			<munit-tools:verify-call doc:name="Verify Transform Message" doc:id="c8172605-99b2-40d5-b245-f421c4c6b91d" processor="ee:transform" times="1">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="7278a29c-2d40-48a3-a90e-f904b2a3607f" attributeName="doc:id" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>
	<munit:test name="reqdemoFlow-test1" doc:id="e83fd1c3-8f3a-4d22-a84a-7674586f266a" expectedErrorType="HTTP:CONNECTIVITY">
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock Request" doc:id="ccedfdbe-49f8-4aba-9a31-9696143e166c" processor="http:request" >
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="c48befeb-4275-4013-80c1-e89fb356dbf0" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[output application/json  --- readUrl('classpath://reqdemoFlowtest\mock_payload.dwl')]" mediaType="application/json " encoding="UTF-8" />
					<munit-tools:error typeId="HTTP:CONNECTIVITY" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="Flow-ref to reqdemoFlow" doc:id="087f8459-869a-46c3-8da9-176c1b24ec4f" name="reqdemoFlow" />
		</munit:execution>
	</munit:test>


</mule>
